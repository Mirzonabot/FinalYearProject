<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewHomestay">

    <EditText
        android:id="@+id/addressOfHomestay"
        android:layout_width="205dp"
        android:layout_height="49dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Address of Homestay"
        android:inputType="textPersonName"
        android:textColorHint="@color/input_hint"
        app:layout_constraintEnd_toEndOf="@+id/homestayName"
        app:layout_constraintStart_toStartOf="@+id/homestayName"
        app:layout_constraintTop_toBottomOf="@+id/homestayName" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:padding="10px"
        android:text="Add a new Homestay"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/homestayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="Name of Homestay"
        android:inputType="textPersonName"
        android:textColorHint="@color/input_hint"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/numAvailableSpaces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Number of available places"
        android:inputType="numberDecimal"
        android:textColorHint="@color/input_hint"
        app:layout_constraintEnd_toEndOf="@+id/addressOfHomestay"
        app:layout_constraintStart_toStartOf="@+id/addressOfHomestay"
        app:layout_constraintTop_toBottomOf="@+id/addressOfHomestay" />

    <ImageView
        android:id="@+id/addLocationFromMap"
        android:layout_width="44dp"
        android:layout_height="46dp"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/addressOfHomestay"
        app:layout_constraintStart_toEndOf="@+id/addressOfHomestay"
        app:layout_constraintTop_toTopOf="@+id/addressOfHomestay"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_baseline_add_location_24" />


</androidx.constraintlayout.widget.ConstraintLayout>