<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="80dp"
    tools:context=".NewHomestay">

    <TextView

        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50px"
        android:width="800px"
        android:gravity="center"
        android:padding="10px"
        android:paddingBottom="40dp"
        android:text="Add a new Homestay"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_below="@+id/numAvailableSpaces"
        android:width="800px"
        android:ems="10"
        android:hint="Name of city"
        android:inputType="textPersonName"
        android:textColorHint="@color/input_hint" />

    <EditText
        android:id="@+id/district"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_below="@+id/city"
        android:width="800px"
        android:ems="10"
        android:hint="Name of district"
        android:inputType="textPersonName"
        android:textColorHint="@color/input_hint" />

    <EditText
        android:id="@+id/village"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_below="@+id/district"
        android:width="800px"
        android:ems="10"
        android:hint="Name of village"
        android:inputType="textPersonName"
        android:textColorHint="@color/input_hint" />
    <EditText
        android:id="@+id/street"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_below="@+id/village"
        android:width="800px"
        android:ems="10"
        android:hint="Name of street"
        android:inputType="textPersonName"
        android:textColorHint="@color/input_hint" />


    <EditText

        android:id="@+id/homestayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:width="800px"
        android:hint="Name of Homestay"
        android:inputType="textPersonName"
        android:textColorHint="@color/input_hint"
        android:layout_below="@+id/textView4"/>

    <EditText
        android:id="@+id/numAvailableSpaces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homestayName"
        android:width="800px"
        android:hint="Number of available places"
        android:inputType="numberDecimal"
        android:textColorHint="@color/input_hint" />

    <ImageView

        android:id="@+id/addLocationFromMap"
        android:layout_width="44dp"
        android:layout_height="46dp"
        android:layout_below="@+id/street"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/ic_baseline_add_location_24" />

    <ImageView

        android:id="@+id/addLocationFromOsmdroid"
        android:layout_width="44dp"
        android:layout_height="46dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/ic_baseline_add_location_24"
        android:layout_below="@+id/street"/>

    <ImageView
        android:id="@+id/addLocationFromGoogle"
        android:layout_width="44dp"
        android:layout_height="46dp"
        android:layout_below="@+id/street"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"

        android:layout_toEndOf="@+id/addLocationFromMap"
        app:srcCompat="@drawable/ic_baseline_add_location_24" />

    <Button
        android:id="@+id/btnAddHomestay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addLocationFromGoogle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:text="Add Homestay"
        android:textColor="@android:color/white"
        android:textSize="20sp" />


</RelativeLayout>